// Prisma schema for JetLag Card Game

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  username      String    @unique @db.VarChar(50)
  email         String    @unique @db.VarChar(100)
  passwordHash  String    @map("password_hash") @db.VarChar(255)
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  gameState     UserGameState?
  statistics    UserStatistics?
  history       GameHistory[]

  @@index([username])
  @@index([email])
  @@map("users")
}

model UserGameState {
  id           Int      @id @default(autoincrement())
  userId       Int      @unique @map("user_id")
  hand         Json     @default("[]")
  gameSize     Int      @default(5) @map("game_size")
  deck         Json     @default("[]")
  discardPile  Json     @default("[]") @map("discard_pile")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_game_state")
}

model UserStatistics {
  id               Int      @id @default(autoincrement())
  userId           Int      @unique @map("user_id")
  totalCardsDrawn  Int      @default(0) @map("total_cards_drawn")
  totalCardsPlayed Int      @default(0) @map("total_cards_played")
  gamesCompleted   Int      @default(0) @map("games_completed")
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_statistics")
}

model GameHistory {
  id          Int      @id @default(autoincrement())
  userId      Int      @map("user_id")
  actionType  String   @map("action_type") @db.VarChar(50)
  actionData  Json     @map("action_data")
  createdAt   DateTime @default(now()) @map("created_at")

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@map("game_history")
}
